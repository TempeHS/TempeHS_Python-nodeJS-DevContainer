{
  "name": "Python annd node.JS with HTML, CSS & JS",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install -r requirements_node.txt && pip install -r requirements_python.txt",
  "postCreateCommand": "",
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "editor.fontSize": 18,
        "extensions.ignoreRecommendations": true,
        "unwantedRecommendations": ["ms-python.vscode-python-envs"],
        "terminal.integrated.defaultProfile.windows": "Git Bash",
        "window.restoreWindows": "preserve",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
      	"workbench.colorTheme": "Default Dark+",
      	"workbench.iconTheme": "vscode-icons",
      	"github.copilot.enable": {
      		"python": false,
      		"html": false,
      		"css": false,
      		"SQL": false
      	},
        "chat.agent.enabled": false
      },
      "extensions": [
        "McCarter.start-git-bash",
        "yy0931.vscode-sqlite3-editor",
        "medo64.render-crlf",
        "ecmel.vscode-html-css",
        "ms-vscode.js-debug",
        "esbenp.prettier-vscode",
        "miramac.vscode-exec-node",
        "oderwat.indent-rainbow",
        "ritwickdey.LiveServer",
        "mathematic.vscode-pdf",
        "GitHub.codespaces",
        "yahyabatulu.vscode-markdown-alert",
        "bierner.markdown-preview-github-styles",
        "mechatroner.rainbow-csv",
        "bierner.markdown-mermaid",
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "ms-python.pylint"
      ]
    }
  },
  "portsAttributes": {
    "5000": {
      "label": "Application"
    }
  },
  "forwardPorts": [5000]
}
